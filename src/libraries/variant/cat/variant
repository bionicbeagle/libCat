// -*- mode: c++ -*-
// vim: set ft=cpp:
#pragma once

#include <cat/match>
#include <cat/maybe>
#include <cat/memory>
#include <cat/type_list>

namespace cat {
namespace detail {
    template <typename...>
    struct variant_node {};

    template <typename T>
    struct variant_node<T> {
        template <iword>
        constexpr auto get() & -> T& {
            return this->storage;
        }

        template <iword>
        constexpr auto get() const& -> T const& {
            return this->storage;
        }

        T storage;
    };

    template <typename T, typename... remaining>
    struct variant_node<T, remaining...> {
        constexpr variant_node() : dummy() {
        }

        // `.get()` is provided an alternative type's index. It then recurses
        // through the alternative types that many times. Then it returns a
        // reference to the storage of this node it has reached.

        template <iword remaining_recursions>
        constexpr auto get() & -> auto& {
            if constexpr (remaining_recursions == 0) {
                return this->storage;
            } else {
                return this->remaining_nodes
                    .template get<remaining_recursions - 1>();
            }
        }

        template <iword remaining_recursions>
        constexpr auto get() const& -> auto& {
            if constexpr (remaining_recursions == 0) {
                return this->storage;
            } else {
                return this->remaining_nodes
                    .template get<remaining_recursions - 1>();
            }
        }

        union {
            T storage;
            variant_node<remaining...> remaining_nodes;
            // A dummy member is required to constant-evaluate this union
            // without initializing it if `T` is a non-trivial class.
            monostate_type dummy;
        };
    };
}  // namespace detail

// TODO: Support reference types in a `variant`.

template <typename... alternative_types>
    requires(type_list<alternative_types...>::is_unique_list)
class variant {
  public:
    using types = type_list<alternative_types...>;
    using alternative_index_t =
        conditional<types::size <= int4_max, int4, int8>;
    alternative_index_t discriminant;

    // The number of alternatives in this `variant`.
    static constexpr alternative_index_t variant_size =
        static_cast<alternative_index_t>(sizeof...(alternative_types));

  private:
    template <typename T, alternative_index_t index>
        requires(index < variant_size)
    static consteval auto recurse_for_index_of_type() -> alternative_index_t {
        using this_alternative = types::template get<index>;
        if constexpr (is_same<T, this_alternative>) {
            return index;
        } else {
            return recurse_for_index_of_type<T, index + 1>();
        }
    }

  public:
    template <typename U, typename... Us>
        requires(sizeof...(Us) >= 0)
    constexpr void hard_reset() {
        if (this->is<U>()) {
            this->get<U>().~U();
        } else {
            if constexpr (sizeof...(Us) > 0) {
                this->hard_reset<Us...>();
            }
        }
    }

    // constexpr void hard_reset() {
    //     this->hard_reset<alternative_types...>();
    // }

    template <typename U, typename... Us>
        requires(sizeof...(Us) >= 0)
    constexpr void construct_from_other_variant(auto const& variant) {
        if constexpr (remove_reference<
                          decltype(variant)>::types::template has_type<U>) {
            if (variant.template is<U>()) {
                this->discriminant = this->alternative_index<U>;
                this->get<U>() = variant.template get<U>();
                return;
            }
        }
        if constexpr (sizeof...(Us) > 0) {
            return this->construct_from_other_variant<Us...>(variant);
        }
    }

    template <typename U, typename... Us>
        requires(sizeof...(Us) >= 0)
    constexpr void assign_other_variant(auto const& variant) {
        if constexpr (remove_reference<
                          decltype(variant)>::types::template has_type<U>) {
            if (variant.template is<U>()) {
                if (!this->is<U>()) {
                    this->hard_reset<alternative_types...>();
                    this->discriminant = this->alternative_index<U>;
                    return;
                }
                this->get<U>() = variant.template get<U>();
            }
        }
        if constexpr (sizeof...(Us) > 0) {
            return this->assign_other_variant<Us...>(variant);
        }
    }

    // Get the index of an alternative from its type.
    template <typename T>
        requires(types::template has_type<T>)
    static constexpr auto alternative_index = recurse_for_index_of_type<T, 0>();

    // Get the type of an alternative from its index.
    template <alternative_index_t index>
    using alternative_t = types::template get<index>;

    constexpr variant() = default;

    constexpr variant(variant<alternative_types...> const& variant) {
        this->construct_from_other_variant<alternative_types...>(variant);
    };

    constexpr variant(variant<alternative_types...>&& variant) {
        this->construct_from_other_variant<alternative_types...>(move(variant));
    };

    // Consume any type within the alternatives list.
    template <typename T>
        requires(types::template has_type<T>)
    constexpr variant(T const& input) {
        // Construct a new `T` at the address where it will be gotten from.
        construct_at(addressof(this->get<T>()), input);
        this->discriminant = this->alternative_index<T>;
    };

    template <rvalue T>
        requires(types::template has_type<T>)
    // NOLINTNEXTLINE `rvalue` sufficiently constrains this constructor.
    constexpr variant(T&& input) {
        // Construct a new `T` at the address where it will be gotten from.
        construct_at(addressof(this->get<T>()), forward<T>(input));
        this->discriminant = this->alternative_index<T>;
    };

    // Subsume a `variant` that holds a subset of this one's alternatives.
    template <typename... Us>
    constexpr variant(variant<Us...> variant) {
        this->construct_from_other_variant<Us...>(variant);
    };

    template <typename T>
        requires(types::template has_type<T>)
    constexpr auto operator=(T const& operand)
        -> variant<alternative_types...>& {
        if (!this->is<T>()) {
            if constexpr (!is_trivially_destructible<T>) {
                this->get<T>().~T();
            }
            this->get<T>() = operand;
            this->discriminant = this->alternative_index<T>;
        } else {
            this->get<T>() = operand;
        }
        return *this;
    }

    template <rvalue T>
        requires(types::template has_type<T>)
    constexpr auto operator=(T&& operand) -> variant<alternative_types...>& {
        if (!this->is<T>()) {
            if constexpr (!is_trivially_destructible<T>) {
                this->get<T>().~T();
            }
            this->get<T>() = forward<T>(operand);
            this->discriminant = this->alternative_index<T>;
        } else {
            this->get<T>() = forward<T>(operand);
        }
        return *this;
    }

    constexpr auto operator=(variant<alternative_types...> const& operand)
        -> variant<alternative_types...>& {
        this->assign_other_variant<alternative_types...>(operand);
        return *this;
    }

    // constexpr auto operator=(variant<alternative_types...>&& operand) ->
    // variant<alternative_types...>&
    // {
    //     this->assign_other_variant<alternative_types...>(
    //         forward<variant<alternative_types...>>(operand));
    //     return *this;
    // }

    template <typename... Us>
    constexpr auto operator=(variant<Us...> const& operand)
        -> variant<alternative_types...>& {
        this->assign_other_variant<Us...>(operand);
        return *this;
    }

    template <typename... Us>
    constexpr auto operator=(variant<Us...>&& operand)
        -> variant<alternative_types...>& {
        this->assign_other_variant<Us...>(forward<variant<Us...>>(operand));
        return *this;
    }

    template <typename T>
        requires(types::template has_type<T>)
    [[nodiscard]]
    constexpr auto get() & -> T& {
        return this->storage.template get<alternative_index<T>>();
    }

    template <typename T>
        requires(types::template has_type<T>)
    [[nodiscard]]
    constexpr auto get() const& -> T const& {
        return this->storage.template get<alternative_index<T>>();
    }

    template <alternative_index_t index>
        requires(index >= 0 && index < ssizeof_pack<alternative_types...>())
    [[nodiscard]]
    constexpr auto get() & {
        return this->storage.template get<index>();
    }

    template <alternative_index_t index>
        requires(index >= 0 && index < ssizeof_pack<alternative_types...>())
    [[nodiscard]]
    constexpr auto get() const& -> decltype(auto) {
        return this->storage.template get<index>();
    }

    template <typename T>
        requires(types::template has_type<T>)
    [[nodiscard]]
    constexpr auto get_if() & -> maybe<T&> {
        if (this->is<T>()) {
            return this->get<T>();
        }
        return nullopt;
    }

    template <typename T>
        requires(types::template has_type<T>)
    [[nodiscard]]
    constexpr auto get_if() const& -> maybe<T&> {
        if (this->is<T>()) {
            return this->get<T>();
        }
        return nullopt;
    }

    template <alternative_index_t index>
        requires(index >= 0 && index < ssizeof_pack<alternative_types...>())
    [[nodiscard]]
    constexpr auto get_if() & {
        using T = types::template get<index>;
        if (this->is<T>()) {
            return maybe<T>{this->get<T>()};
        }
        return maybe<T>{nullopt};
    }

    template <alternative_index_t index>
        requires(index >= 0 && index < ssizeof_pack<alternative_types...>())
    [[nodiscard]]
    constexpr auto get_if() const& {
        using T = types::template get<index>;
        if (this->is<T>()) {
            return maybe<T>{this->get<T>()};
        }
        return maybe<T>{nullopt};
    }

    [[nodiscard]]
    constexpr auto alternative() const -> alternative_index_t {
        return this->discriminant;
    }

    // Holds true if this `variant` currently has some value of the type
    // `T`. This method allows `variant` to be used in `match` statements.
    template <typename T>
    [[nodiscard]]
    constexpr auto is() const -> bool {
        if constexpr (types::template has_type<T>) {
            return this->discriminant == this->alternative_index<T>;
        } else {
            return false;
        }
    }

  private:
    // Base case.
    template <alternative_index_t index, typename T>
    constexpr auto recurse_converting_equality(auto const& in_value) const
        -> bool {
        if (this->holds_alternative(index)) {
            return static_cast<T>(in_value) == this->get<T>();
        }
        return false;
    }

    // Recurse through every alternative type, and if it is currently the
    // active alternative, convert `in_value` to that type, then check if it
    // is equal to this `variant`'s value.
    template <alternative_index_t index, typename T, typename... remaining>
        requires(sizeof...(remaining) > 0)
    constexpr auto recurse_converting_equality(auto const& in_value) const
        -> bool {
        if (this->holds_alternative(index)) {
            return static_cast<T>(in_value) == this->get<T>();
        }
        return recurse_converting_equality<index + 1, remaining...>(in_value);
    }

  public:
    // Holds true if this `variant` currently has some value convertible to
    // `in_value`. This method allows `variant` to be used in `match`
    // statements.
    template <typename T>
        requires(is_implicitly_convertible<T, alternative_types> && ...)
    [[nodiscard]]
    constexpr auto is(T const& in_value) const -> bool {
        return this->recurse_converting_equality<0, alternative_types...>(
            in_value);
    }

    template <typename T>
    [[nodiscard]]
    constexpr auto friend
    operator==(variant<alternative_types...> const& self, T other) -> bool {
        return self.recurse_converting_equality<0, alternative_types...>(other);
    }

    // Member access syntax pattern matching for `cat::match()`.
    template <typename... Patterns>
        requires(is_specialization<Patterns, detail::pattern_invocable> && ...)
    constexpr void match(Patterns&&... patterns) {
        detail::match_patterns (*this)(forward<Patterns>(patterns)...);
    }

    // Holds true if this `variant` currently has some value of the type
    // `T`. Unlike `.is()`, this only accepts types that are potentially
    // valid alternatives.
    template <typename T>
        requires(types::template has_type<T>)
    [[nodiscard]]
    constexpr auto holds_alternative() const -> bool {
        return this->discriminant == this->alternative_index<T>;
    }

    // Holds true if this `variant` currently holds the type of index
    // `alternative`, which can be retrieved from `.alternative()` or
    // `.alternative_index<T>`.
    [[nodiscard]]
    constexpr auto holds_alternative(alternative_index_t alternative) const
        -> bool {
        return this->discriminant.raw == alternative;
    }

  private:
    detail::variant_node<alternative_types...> storage;
};

}  // namespace cat

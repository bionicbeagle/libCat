// These must be implemented after both `maybe` and `string`:

template <typename T>
[[nodiscard]]
auto cat::maybe<T>::or_exit(cat::string const error_message,
                            iword exit_code) & {
    if (this->has_value()) [[likely]] {
        if constexpr (!is_void<T>) {
            return this->value();
        } else {
            return;
        }
    } else {
        _ = eprintln(error_message);
        exit(exit_code);
    }
}

template <typename T>
[[nodiscard]]
auto cat::maybe<T>::or_exit(cat::string const error_message,
                            iword exit_code) const& {
    if (this->has_value()) [[likely]] {
        if constexpr (!is_void<T>) {
            return this->value();
        } else {
            return;
        }
    } else {
        _ = eprintln(error_message);
        exit(exit_code);
    }
}

template <typename T>
[[nodiscard]]
auto cat::maybe<T>::or_exit(cat::string const error_message,
                            iword exit_code) && {
    if (this->has_value()) [[likely]] {
        if constexpr (!is_void<T>) {
            return move(this)->value();
        } else {
            return;
        }
    } else {
        _ = eprintln(error_message);
        exit(exit_code);
    }
}

template <typename T>
[[nodiscard]]
auto cat::maybe<T>::or_exit(cat::string const error_message,
                            iword exit_code) const&& {
    if (this->has_value()) [[likely]] {
        if constexpr (!is_void<T>) {
            return move(this)->value();
        } else {
            return;
        }
    } else {
        _ = eprintln(error_message);
        exit(exit_code);
    }
}


}  // namespace cat

// These must be implemented after both `Optional` and `String`:

template <typename T>
[[nodiscard]] auto cat::Optional<T>::or_exit(cat::String const error_message,
                                             ssize exit_code) & {
    if (this->has_value()) [[likely]] {
        if constexpr (!is_void<T>) {
            return this->value();
        } else {
            return;
        }
    } else {
        _ = eprintln(error_message);
        exit(exit_code);
    }
}

template <typename T>
[[nodiscard]] auto cat::Optional<T>::or_exit(cat::String const error_message,
                                             ssize exit_code) const& {
    if (this->has_value()) [[likely]] {
        if constexpr (!is_void<T>) {
            return this->value();
        } else {
            return;
        }
    } else {
        _ = eprintln(error_message);
        exit(exit_code);
    }
}

template <typename T>
[[nodiscard]] auto cat::Optional<T>::or_exit(cat::String const error_message,
                                             ssize exit_code) && {
    if (this->has_value()) [[likely]] {
        if constexpr (!is_void<T>) {
            return move(this->value());
        } else {
            return;
        }
    } else {
        _ = eprintln(error_message);
        exit(exit_code);
    }
}

template <typename T>
[[nodiscard]] auto cat::Optional<T>::or_exit(cat::String const error_message,
                                             ssize exit_code) const&& {
    if (this->has_value()) [[likely]] {
        if constexpr (!is_void<T>) {
            return move(this->value());
        } else {
            return;
        }
    } else {
        _ = eprintln(error_message);
        exit(exit_code);
    }
}

